<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.sandun.myapplication.ui.main.MainViewModel" />
    </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:text="J M S R Jayasekara"
          android:textSize="14sp"
          android:textStyle="bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.498"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView2"
          app:layout_constraintVertical_bias="0.0" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="1dp"
          android:fontFamily="serif"
          android:text="SENG 31323 - Mobile Computing Technologies "
          android:textAlignment="textStart"
          android:textSize="16sp"
          android:textStyle="normal|bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.474"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView3"
          app:layout_constraintVertical_bias="0.085" />

      <EditText
          android:id="@+id/TextNotifier"
          android:layout_width="338dp"
          android:layout_height="55dp"
          android:ems="10"
          android:inputType="textPersonName"
          android:text="Enter Text Here"
          android:textAlignment="center"
          android:textStyle="bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.495"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.178" />

      <TextView
          android:id="@+id/TextObserver"
          android:layout_width="376dp"
          android:layout_height="185dp"
          android:text="Update"
          android:textAlignment="center"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textColor="#0D6A5F"
          android:textSize="20sp"
          android:textStyle="bold"
          android:typeface="serif"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.564"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/TextNotifier"
          app:layout_constraintVertical_bias="0.142" />

      <TextView
          android:id="@+id/textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="This program will observe what you are typing in the below text editor using MVVM Pattern."
          android:textAlignment="center"
          android:textColor="#131823"
          android:textStyle="bold"
          app:layout_constraintBottom_toTopOf="@+id/TextNotifier"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="SE/2018/020"
          android:textSize="18sp"
          android:textStyle="bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/TextObserver"
          app:layout_constraintVertical_bias="0.277" />

      <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Assignment 01"
          android:textAlignment="center"
          android:textSize="16sp"
          android:textStyle="bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.523"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/TextObserver"
          app:layout_constraintVertical_bias="0.574" />
  </androidx.constraintlayout.widget.ConstraintLayout>


</layout>